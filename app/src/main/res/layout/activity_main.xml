<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/remote_background"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="20dp"
        android:paddingTop="16dp"
        android:paddingBottom="24dp">

        <!-- Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="GOtv Remote"
                android:textColor="@color/white"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvConnectionStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="IR Ready"
                android:textColor="@color/accent_green"
                android:textSize="12sp"
                android:drawablePadding="4dp" />

            <ImageButton
                android:id="@+id/btnSettings"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:background="@drawable/btn_round"
                android:src="@android:drawable/ic_menu_manage"
                android:contentDescription="Settings"
                android:scaleType="centerInside"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Power Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <ImageButton
                android:id="@+id/btnPower"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_round_red"
                android:src="@android:drawable/ic_lock_power_off"
                android:contentDescription="@string/power"
                android:scaleType="centerInside"
                app:tint="@color/white" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <Button
                android:id="@+id/btnInput"
                android:layout_width="72dp"
                android:layout_height="44dp"
                android:background="@drawable/btn_rect"
                android:text="INPUT"
                android:textColor="@color/white"
                android:textSize="12sp" />

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btnMute"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/btn_round"
                android:src="@android:drawable/ic_lock_silent_mode"
                android:contentDescription="@string/mute"
                android:scaleType="centerInside"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Number Pad -->
        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="4"
            android:layout_gravity="center"
            android:layout_marginBottom="12dp">

            <Button android:id="@+id/btn1" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="1" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn2" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="2" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn3" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="3" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn4" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="4" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn5" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="5" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn6" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="6" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn7" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="7" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn8" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="8" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btn9" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="9" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btnLast" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_rect"
                android:text="LAST" android:textColor="@color/accent_yellow" android:textSize="12sp" />
            <Button android:id="@+id/btn0" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_number"
                android:text="0" android:textColor="@color/white" android:textSize="20sp" />
            <Button android:id="@+id/btnGuide" android:layout_width="88dp" android:layout_height="52dp"
                android:layout_margin="4dp" android:background="@drawable/btn_gotv_accent"
                android:text="GUIDE" android:textColor="@color/white" android:textSize="12sp" />
        </GridLayout>

        <!-- Volume / D-Pad / Channel Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <!-- Volume Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnVolUp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_volume"
                    android:text="VOL\n+"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:lineSpacingExtra="-2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VOL"
                    android:textColor="@color/light_gray"
                    android:textSize="10sp"
                    android:layout_marginVertical="4dp" />

                <Button
                    android:id="@+id/btnVolDown"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_volume"
                    android:text="VOL\n-"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:lineSpacingExtra="-2dp" />
            </LinearLayout>

            <!-- D-Pad -->
            <FrameLayout
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginHorizontal="8dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/dpad_background" />

                <!-- Up -->
                <ImageButton
                    android:id="@+id/btnUp"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="top|center_horizontal"
                    android:layout_marginTop="4dp"
                    android:background="@drawable/dpad_arrow"
                    android:src="@android:drawable/arrow_up_float"
                    android:scaleType="centerInside"
                    android:contentDescription="Up"
                    app:tint="@color/white" />

                <!-- Down -->
                <ImageButton
                    android:id="@+id/btnDown"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="bottom|center_horizontal"
                    android:layout_marginBottom="4dp"
                    android:background="@drawable/dpad_arrow"
                    android:src="@android:drawable/arrow_down_float"
                    android:scaleType="centerInside"
                    android:contentDescription="Down"
                    app:tint="@color/white" />

                <!-- Left -->
                <ImageButton
                    android:id="@+id/btnLeft"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical|start"
                    android:layout_marginStart="4dp"
                    android:background="@drawable/dpad_arrow"
                    android:rotation="270"
                    android:src="@android:drawable/arrow_up_float"
                    android:scaleType="centerInside"
                    android:contentDescription="Left"
                    app:tint="@color/white" />

                <!-- Right -->
                <ImageButton
                    android:id="@+id/btnRight"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:layout_gravity="center_vertical|end"
                    android:layout_marginEnd="4dp"
                    android:background="@drawable/dpad_arrow"
                    android:rotation="90"
                    android:src="@android:drawable/arrow_up_float"
                    android:scaleType="centerInside"
                    android:contentDescription="Right"
                    app:tint="@color/white" />

                <!-- OK (Center) -->
                <Button
                    android:id="@+id/btnOk"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:layout_gravity="center"
                    android:background="@drawable/dpad_center"
                    android:text="OK"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </FrameLayout>

            <!-- Channel Controls -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btnChUp"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_channel"
                    android:text="CH\n+"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:lineSpacingExtra="-2dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="CH"
                    android:textColor="@color/light_gray"
                    android:textSize="10sp"
                    android:layout_marginVertical="4dp" />

                <Button
                    android:id="@+id/btnChDown"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:background="@drawable/btn_channel"
                    android:text="CH\n-"
                    android:textColor="@color/white"
                    android:textSize="11sp"
                    android:lineSpacingExtra="-2dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Function Row: Menu, Home, Back, Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnMenu"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_rect"
                android:text="MENU"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnHome"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_gotv_accent"
                android:text="HOME"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnBack"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_rect"
                android:text="BACK"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnInfo"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_rect"
                android:text="INFO"
                android:textColor="@color/accent_blue"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Extra Function Row: EPG, FAV, SUB, Audio -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="12dp">

            <Button
                android:id="@+id/btnEpg"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_rect"
                android:text="EPG"
                android:textColor="@color/accent_green"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnFav"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_rect"
                android:text="FAV"
                android:textColor="@color/accent_yellow"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnSubtitle"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_rect"
                android:text="SUB"
                android:textColor="@color/white"
                android:textSize="11sp" />

            <Button
                android:id="@+id/btnAudio"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="4dp"
                android:background="@drawable/btn_rect"
                android:text="AUDIO"
                android:textColor="@color/white"
                android:textSize="11sp" />
        </LinearLayout>

        <!-- Media Controls Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="8dp">

            <ImageButton
                android:id="@+id/btnRewind"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/btn_media"
                android:src="@android:drawable/ic_media_rew"
                android:scaleType="centerInside"
                android:contentDescription="@string/rewind"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/btn_media"
                android:src="@android:drawable/ic_media_play"
                android:scaleType="centerInside"
                android:contentDescription="@string/play_pause"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnStop"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/btn_media"
                android:src="@android:drawable/ic_media_pause"
                android:scaleType="centerInside"
                android:contentDescription="@string/stop"
                app:tint="@color/white" />

            <ImageButton
                android:id="@+id/btnFastForward"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/btn_media"
                android:src="@android:drawable/ic_media_ff"
                android:scaleType="centerInside"
                android:contentDescription="@string/fast_forward"
                app:tint="@color/white" />

            <Button
                android:id="@+id/btnRecord"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:layout_marginHorizontal="3dp"
                android:background="@drawable/btn_media"
                android:text="REC"
                android:textColor="@color/accent_red"
                android:textSize="11sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
